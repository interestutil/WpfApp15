<Window x:Class="WpfApp15.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp15"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="datagrid2" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Course ID" Binding="{Binding c_id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Course Name" Binding="{Binding c_name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Student ID" Binding="{Binding std_id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Student Name" Binding="{Binding std_name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Grade" Binding="{Binding degree}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Course ID:" Grid.Row="1" VerticalAlignment="Center" Margin="50, 0, 0, 0"></Label>
        <TextBox Name="course_id_textbox" Grid.Row="1" Height="30" Width="100" Margin="-450, 0, 0, 0" VerticalAlignment="Center"></TextBox>

        <Label Content="Student ID:" Grid.Row="1" VerticalAlignment="Center" Margin="242,0,-142,0"></Label>
        <TextBox Name="degree_textbox" Grid.Row="1" Height="30" Width="100" Margin="542,0,158,0" VerticalAlignment="Center"></TextBox>

        <Label Content="Degree:" Grid.Row="1" VerticalAlignment="Center" Margin="442,0,58,0"></Label>
        <TextBox Name="student_id_textbox" Grid.Row="1" Height="30" Width="100" Margin="325,0,375,0" VerticalAlignment="Center"></TextBox>

        <Button Content="Add Grade" Grid.Row="1" Width="100" Height="30" Margin="0,157,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="Button_Click_2"></Button>
        <Button Content="Delete Grade" Grid.Row="1" Width="100" Height="30" Margin="213,157,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click_1"></Button>
        <Button Content="Update Grade" Grid.Row="1" Width="100" Height="30" Margin="0,157,226,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"></Button>
    </Grid>
</Window>
