<Window x:Class="WpfApp15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp15"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Username: " Margin="0, 150, 0, 0"></Label>
            <TextBox Name="user" Height="30" Width="140" Margin="0, -100, 0, 0"></TextBox>
            <Label Content="Password: " Margin="0, 150, 0, 0"></Label>
            <TextBox Name="pass" Height="30" Width="140" Margin="0, -100, 0, 0"></TextBox>
        </StackPanel>
        <Button HorizontalAlignment="Center" Width="70" Height="50" Content="Log in" Click="Button_Click"></Button>
    </Grid>
</Window>
